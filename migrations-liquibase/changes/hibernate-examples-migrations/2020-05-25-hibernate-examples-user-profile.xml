<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <changeSet author="ilya_minyukhin" id="2020-05-25-hibernate-examples-user-profile.xml">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="user_profile"/>
                <foreignKeyConstraintExists foreignKeyName="fk_user_profile_users"/>
            </not>
        </preConditions>

        <createTable tableName="user_profile">
            <column name="user_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="profile_info" type="varchar(512)">
            </column>
        </createTable>
        <addForeignKeyConstraint
                baseColumnNames="user_id"
                baseTableName="user_profile"
                constraintName="fk_user_profile_users"
                deferrable="false"
                initiallyDeferred="false"
                onDelete="CASCADE"
                onUpdate="NO ACTION"
                referencedColumnNames="id"
                referencedTableName="users"
        />

    </changeSet>

</databaseChangeLog>
